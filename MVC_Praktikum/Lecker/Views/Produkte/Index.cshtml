@model Lecker.Models.Produkte

@using System.Configuration
@using System.Data.SqlClient


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="col-sm-4" id="left_col">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group">
                <input type="email" name="username" placeholder="username" class="form-control" />
            </div>

            <div class="form-group">
                <input type="password" name="name" placeholder="password" class="form-control">
            </div>

            <div class="form-check">
                <label class="form-check-label">
                    <input type="checkbox" class="form-check-input">
                    Angemeldet bleiben
                </label>
            </div>

            <button type="button" class="btn btn-primary" id="loginBtn">Anmelden</button>

        </div>

    </div>

    <button type="button" class="btn btn-success" id="registerButton">Registrieren</button>
</div>

<div class="col-sm-8" id="right_col">

    <h2>Verfügbare Speisen(Bestseller)</h2>

    <div class="container-fluid col-sm-12" id="productlist">

        @{
            int counter = 0;

            var productName = (List<string>)ViewData["pName"]; 
            var productID = (List<int>)ViewData["pID"];
            var productKategorie = (List<string>)ViewData["pKategorie"];

    foreach (var product in productID)
    {
                <text>
                    <div class="col-sm-3">
                        <ul>
                            <li><img src="~/figures/mensa_product_logo.jpg" alt="productImage" /></li>
                            <li>@productName[counter]</li>
                            <li>@Html.ActionLink("Details", "Index", "Details", new { produkt = productID[counter] }, null)</li>
                        </ul>
                    </div>
                </text>

                counter++;
            }


        }



    </div>



</div>